            <script>
                // Word suggestions data
                const wordSuggestions = [
                    'تفاحة 🍎', 'كرة ⚽', 'سيارة 🚗', 'قطة 🐱', 'كلب 🐶',
                    'عصفور 🐦', 'ماء 💧', 'حليب 🥛', 'خبز 🍞', 'باب 🚪',
                    'كرسي 🪑', 'شمس ☀️', 'قمر 🌙', 'نجمة ⭐', 'زهرة 🌸'
                ];

                // Letter suggestions data
                const letterSuggestions = [
                    'ا', 'ب', 'ت', 'ث', 'ج', 'ح', 'خ', 'د', 'ذ', 'ر',
                    'ز', 'س', 'ش', 'ص', 'ض', 'ط', 'ظ', 'ع', 'غ', 'ف',
                    'ق', 'ك', 'ل', 'م', 'ن', 'ه', 'و', 'ي'
                ];

                // Letter with vowel suggestions
                const letterVowelSuggestions = [
                    'بَ', 'بِ', 'بُ', 'بْ', 'تَ', 'تِ', 'تُ', 'تْ',
                    'ثَ', 'ثِ', 'ثُ', 'ثْ', 'جَ', 'جِ', 'جُ', 'جْ',
                    'حَ', 'حِ', 'حُ', 'حْ', 'خَ', 'خِ', 'خُ', 'خْ',
                    'دَ', 'دِ', 'دُ', 'دْ', 'ذَ', 'ذِ', 'ذُ', 'ذْ',
                    'رَ', 'رِ', 'رُ', 'رْ', 'زَ', 'زِ', 'زُ', 'زْ',
                    'سَ', 'سِ', 'سُ', 'سْ', 'شَ', 'شِ', 'شُ', 'شْ',
                    'صَ', 'صِ', 'صُ', 'صْ', 'ضَ', 'ضِ', 'ضُ', 'ضْ',
                    'طَ', 'طِ', 'طُ', 'طْ', 'ظَ', 'ظِ', 'ظُ', 'ظْ',
                    'عَ', 'عِ', 'عُ', 'عْ', 'غَ', 'غِ', 'غُ', 'غْ',
                    'فَ', 'فِ', 'فُ', 'فْ', 'قَ', 'قِ', 'قُ', 'قْ',
                    'كَ', 'كِ', 'كُ', 'كْ', 'لَ', 'لِ', 'لُ', 'لْ',
                    'مَ', 'مِ', 'مُ', 'مْ', 'نَ', 'نِ', 'نُ', 'نْ',
                    'هَ', 'هِ', 'هُ', 'هْ', 'وَ', 'وِ', 'وُ', 'وْ',
                    'يَ', 'يِ', 'يُ', 'يْ'
                ];

                // Initialize suggestions and vowel buttons on page load
                document.addEventListener('DOMContentLoaded', function() {
                    loadSuggestions();
                    initializeVowelButtons();
                });

                // Initialize vowel button functionality
                function initializeVowelButtons() {
                    const vowelButtons = document.querySelectorAll('.vowel-btn');
                    vowelButtons.forEach(button => {
                        button.addEventListener('click', function() {
                            const vowel = this.getAttribute('data-vowel');
                            const textInput = document.getElementById('text');
                            const currentValue = textInput.value;
                            
                            // If input is empty, start with the base letter
                            if (currentValue.length === 0) {
                                textInput.value = '';
                                textInput.focus();
                            }
                            // If input has 1 character (letter only), append vowel
                            else if (currentValue.length === 1) {
                                textInput.value = currentValue + vowel;
                                textInput.focus();
                                textInput.setSelectionRange(textInput.value.length, textInput.value.length);
                            }
                            // If input has 2 characters (letter + vowel), replace vowel
                            else if (currentValue.length === 2) {
                                const baseText = currentValue.charAt(0);
                                textInput.value = baseText + vowel;
                                textInput.focus();
                                textInput.setSelectionRange(textInput.value.length, textInput.value.length);
                            }
                        });
                    });

                    // Add input validation and clear button functionality
                    const textInput = document.getElementById('text');
                    const clearBtn = document.getElementById('clearBtn');
                    
                    textInput.addEventListener('input', function() {
                        const isLetter = document.getElementById('type-letter').checked;
                        
                        // Show/hide clear button based on input content
                        clearBtn.style.display = this.value.length > 0 ? 'flex' : 'none';
                        
                        if (isLetter) {
                            // Allow only Arabic letters and the 4 vowels
                            const arabicVowels = ['َ', 'ِ', 'ُ', 'ْ'];
                            const arabicLetters = 'ابتثجحخدذرزسشصضطظعغفقكلمنهوي';
                            
                            let filteredValue = '';
                            for (let char of this.value) {
                                if (arabicLetters.includes(char) || arabicVowels.includes(char)) {
                                    filteredValue += char;
                                }
                            }
                            
                            // Limit to 2 characters for letters
                            if (filteredValue.length > 2) {
                                filteredValue = filteredValue.substring(0, 2);
                            }
                            
                            this.value = filteredValue;
                            
                            // Update clear button visibility after filtering
                            clearBtn.style.display = this.value.length > 0 ? 'flex' : 'none';
                        }
                    });
                    
                    // Clear button click handler
                    clearBtn.addEventListener('click', function() {
                        textInput.value = '';
                        textInput.focus();
                        this.style.display = 'none';
                    });
                }

                // 1. Content Type Toggle Function
                function toggleContentType() {
                    const isWord = document.getElementById('type-word').checked;
                    const textInput = document.getElementById('text');
                    const textLabel = document.getElementById('textLabel');
                    const suggestionsLabel = document.getElementById('suggestionsLabel');
                    const submitBtn = document.getElementById('submitBtn');
                    const form = document.getElementById('contentForm');
                    const vowelButtons = document.getElementById('vowelButtons');
                    const clearBtn = document.getElementById('clearBtn');

                    if (isWord) {
                        // Word mode
                        textLabel.textContent = '<%= __("wordText") %>';
                        textInput.placeholder = '<%= __("enterWord") %>';
                        textInput.maxLength = 20;
                        suggestionsLabel.innerHTML = '<i class="fas fa-lightbulb" style="color: #fbbf24; margin-left: 5px;"></i> <%= __("suggestedWords") || "كلمات مقترحة" %>';
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> <%= __("saveWord") || "حفظ الكلمة" %>';
                        vowelButtons.style.display = 'none'; // Hide vowel buttons for words
                        clearBtn.style.display = 'none'; // Hide clear button for empty input
                        form.action = '/specialist/words/add';
                        // Add content type hidden input
                        let contentTypeInput = document.getElementById('contentTypeHidden');
                        if (!contentTypeInput) {
                            contentTypeInput = document.createElement('input');
                            contentTypeInput.type = 'hidden';
                            contentTypeInput.name = 'contentType';
                            contentTypeInput.id = 'contentTypeHidden';
                            form.appendChild(contentTypeInput);
                        }
                        contentTypeInput.value = 'word';
                    } else {
                        // Letter mode
                        textLabel.textContent = '<%= __("letterText") || "حرف" %>';
                        textInput.placeholder = '<%= __("enterLetter") || "أدخل حرفاً" %>';
                        textInput.maxLength = 2; // Allow for letter + vowel combinations
                        suggestionsLabel.innerHTML = '<i class="fas fa-lightbulb" style="color: #fbbf24; margin-left: 5px;"></i> <%= __("suggestedLetters") || "حروف مقترحة" %>';
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> <%= __("saveLetter") || "حفظ الحرف" %>';
                        vowelButtons.style.display = 'flex'; // Show vowel buttons for letters
                        clearBtn.style.display = textInput.value.length > 0 ? 'flex' : 'none'; // Show clear button if input has content
                        form.action = '/specialist/words/add';
                        // Add content type hidden input
                        let contentTypeInput = document.getElementById('contentTypeHidden');
                        if (!contentTypeInput) {
                            contentTypeInput = document.createElement('input');
                            contentTypeInput.type = 'hidden';
                            contentTypeInput.name = 'contentType';
                            contentTypeInput.id = 'contentTypeHidden';
                            form.appendChild(contentTypeInput);
                        }
                        contentTypeInput.value = 'letter';
                    }

                    loadSuggestions();
                }

                // 2. Content Display Toggle Function
                function toggleContentDisplay() {
                    const showWords = document.getElementById('display-words').checked;
                    const wordsGrid = document.getElementById('wordsGrid');
                    const lettersGrid = document.getElementById('lettersGrid');
                    const libraryTitle = document.getElementById('libraryTitle');
                    const contentTypeInput = document.getElementById('contentTypeInput');

                    if (showWords) {
                        wordsGrid.style.display = 'grid';
                        lettersGrid.style.display = 'none';
                        libraryTitle.innerHTML = '<i class="fas fa-layer-group"></i> <%= __("wordLibrary") || "مكتبة الكلمات" %>';
                        contentTypeInput.value = 'word';
                        // Only update UI, don't submit form to prevent recursive calls
                    } else {
                        wordsGrid.style.display = 'none';
                        lettersGrid.style.display = 'grid';
                        libraryTitle.innerHTML = '<i class="fas fa-layer-group"></i> <%= __("letterLibrary") || "مكتبة الحروف" %>';
                        contentTypeInput.value = 'letter';
                        // Only update UI, don't submit form to prevent recursive calls
                    }
                }

                // 3. Load Suggestions Function
                function loadSuggestions() {
                    const isWord = document.getElementById('type-word').checked;
                    const suggestionsGrid = document.getElementById('suggestionsGrid');
                    const suggestions = isWord ? wordSuggestions : letterVowelSuggestions;

                    suggestionsGrid.innerHTML = '';
                    suggestions.forEach(function(suggestion) {
                        const button = document.createElement('button');
                        button.type = 'button';
                        button.className = 'suggestion-tag';
                        button.textContent = suggestion;
                        button.onclick = function() { selectSuggestion(suggestion); };
                        suggestionsGrid.appendChild(button);
                    });
                }

                // 4. Select Suggestion Function
                function selectSuggestion(suggestion) {
                    document.getElementById('text').value = suggestion;
                }

                // 5. Text to Speech Logic (Browser Native)
                function speakContent(text) {
                    if ('speechSynthesis' in window) {
                        const utterance = new SpeechSynthesisUtterance(text);
                        utterance.lang = 'ar-SA'; // Set to Arabic
                        window.speechSynthesis.speak(utterance);
                    } else {
                        alert("Browser does not support Text-to-Speech");
                    }
                }

                // 6. Enhanced Client Side Filter
                function filterClientSide() {
                    const input = document.getElementById('searchInput');
                    const filter = input.value.toUpperCase();
                    const showWords = document.getElementById('display-words').checked;
                    const activeGrid = showWords ? document.getElementById('wordsGrid') : document.getElementById('lettersGrid');
                    const cards = activeGrid.getElementsByClassName('content-card-item');

                    for (let i = 0; i < cards.length; i++) {
                        const txtValue = cards[i].getAttribute('data-text');
                        if (!txtValue) {
                            cards[i].style.display = "none";
                        } else if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            cards[i].style.display = "";
                        } else {
                            cards[i].style.display = "none";
                        }
                    }
                }

                // 7. Image Preview Logic (for future use)
                function previewImage(input) {
                    const preview = document.getElementById('img-preview');
                    const placeholder = document.getElementById('preview-container');

                    if (input.files && input.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                            placeholder.style.display = 'none';
                        }
                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>

