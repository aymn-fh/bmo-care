<%- include('../partials/layout-start', { title: __('myChildren'), activePage: 'children' }) %>

    <div class="page-container-clean">
        <div class="page-header-clean">
            <h2>
                <%= __('myChildren') %>
                    <i class="fas fa-child" style="color: #3b82f6;"></i>
            </h2>
            <button onclick="openAddChildModal()" class="btn-add-child-modern">
                <i class="fas fa-plus-circle"></i>
                <span><%= __('addChild') %></span>
            </button>
        </div>

        <div class="children-grid-centered">
            <% if (children && children.length> 0) { %>
                <% children.forEach(function(child) { %>
                    <a href="/specialist/child/<%= child._id %>/analytics" class="child-card-centered">
                        <!-- Avatar -->
                        <div class="avatar-large-blue">
                            <i class="fas fa-child"></i>
                        </div>

                        <!-- Name -->
                        <h3 class="child-name-clean">
                            <%= child.name %>
                        </h3>

                        <!-- Details Row: Age -->
                        <div class="detail-row-clean">
                            <span>
                                <%= child.age %>
                                    <%= __('years') %>
                            </span>
                            <i class="fas fa-birthday-cake icon-secondary"></i>
                        </div>

                        <!-- Details Row: Parent -->

                        <!-- Details Row: Parent -->
                        <div class="detail-row-clean" style="flex-direction: column; gap: 0.2rem;">
                            <div style="display: flex; align-items: center; gap: 0.5rem; color: #64748b;">
                                <i class="fas fa-user-tie icon-primary"></i>
                                <span style="font-size: 0.9rem;"><%= __('parent') %>:</span>
                            </div>
                            <div style="font-weight: 600; color: #334155;">
                                <%= child.parent ? child.parent.name : __('notAssigned') %>
                            </div>
                            <% if (child.parent && child.parent.staffId) { %>
                                <span class="badge-pill-custom"
                                    style="background: #eff6ff; color: #3b82f6; border: 1px solid #dbeafe; padding: 2px 8px; font-size: 0.75rem; border-radius: 6px;">
                                    <%= child.parent.staffId %>
                                </span>
                                <% } %>
                        </div>


                        <!-- Difficulty Badge -->
                        <div class="badge-container-clean">
                            <span
                                class="badge-pill-custom <%= child.difficultyLevel === 'beginner' ? 'badge-beginner' : child.difficultyLevel === 'intermediate' ? 'badge-intermediate' : 'badge-advanced' %>">
                                <%= __(child.difficultyLevel) %>
                            </span>
                        </div>
                    </a>
                    <% }); %>
                        <% } else { %>
                            <div class="empty-state-clean">
                                <i class="fas fa-child"></i>
                                <h3>
                                    <%= __('noChildren') %>
                                </h3>
                                <p>
                                    <%= __('childrenWillAppear') %>
                                </p>
                            </div>
                            <% } %>
        </div>
    </div>

    <!-- Add Child Modal -->
    <div id="addChildModal" class="modal-overlay-clean" style="display: none;">
        <div class="modal-card-clean">
            <div class="modal-header-clean">
                <h3>
                    <%= __('addChild') %>
                </h3>
                <button onclick="closeAddChildModal()" class="close-btn-clean"><i class="fas fa-times"></i></button>
            </div>
            <form id="addChildForm" onsubmit="submitAddChild(event)">
                <div class="form-group-clean">
                    <label>
                        <i class="fas fa-user-friends" style="margin-left: 0.5rem; color: #3b82f6;"></i>
                        <%= __('selectParent') %>
                    </label>
                    <select id="parentSelect" name="parentId" class="input-modern" required>
                        <option value=""><%= __('loadingParents') %></option>
                    </select>
                </div>

                <div class="form-group-clean">
                    <label>
                        <%= __('childName') %>
                    </label>
                    <input type="text" name="name" class="input-clean" required>
                </div>

                <div class="row-clean">
                    <div class="form-group-clean half">
                        <label>
                            <%= __('age') %>
                        </label>
                        <input type="number" name="age" class="input-clean" min="4" max="15" required>
                    </div>
                    <div class="form-group-clean half">
                        <label>
                            <%= __('gender') %>
                        </label>
                        <select name="gender" class="input-clean" required>
                            <option value="male">
                                <%= __('male') %>
                            </option>
                            <option value="female">
                                <%= __('female') %>
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group-clean">
                    <label>
                        <%= __('difficultyLevel') %>
                    </label>
                    <select name="difficultyLevel" class="input-clean">
                        <option value="beginner">
                            <%= __('beginner') %>
                        </option>
                        <option value="intermediate">
                            <%= __('intermediate') %>
                        </option>
                        <option value="advanced">
                            <%= __('advanced') %>
                        </option>
                    </select>
                </div>

                <div class="modal-footer-clean">
                    <button type="button" onclick="closeAddChildModal()" class="btn-secondary-clean">
                        <%= __('cancel') %>
                    </button>
                    <button type="submit" class="btn-primary-clean">
                        <%= __('save') %>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openAddChildModal() {
            document.getElementById('addChildModal').style.display = 'flex';
            fetchParents();
        }

        function closeAddChildModal() {
            document.getElementById('addChildModal').style.display = 'none';
        }

        async function fetchParents() {
            try {
                console.log('üîç Fetching parents...');
                const response = await fetch('/specialist/api/parents', {
                    credentials: 'include'
                });

                console.log('üì° Response status:', response.status);
                const data = await response.json();
                console.log('üìä Parents data:', data);

                const select = document.getElementById('parentSelect');

                if (!data.success) {
                    console.error('‚ùå API returned success=false:', data.message);
                    select.innerHTML = '<option value=""><%= __('loadParentsError') %></option>';
                    return;
                }

                if (data.parents && data.parents.length > 0) {
                    select.innerHTML = '<option value=""><%= __('selectParent') %></option>';
                    data.parents.forEach(parent => {
                        const option = document.createElement('option');
                        option.value = parent._id;
                        option.textContent = `${parent.name} (${parent.email})`;
                        select.appendChild(option);
                    });
                    console.log(`‚úÖ Loaded ${data.parents.length} parents`);
                } else {
                    console.warn('‚ö†Ô∏è No linked parents found');
                    select.innerHTML = '<option value=""><%= __('noLinkedParents') %></option>';
                }
            } catch (error) {
                console.error('‚ùå Error fetching parents:', error);
                const select = document.getElementById('parentSelect');
                select.innerHTML = '<option value=""><%= __('serverConnectionError') %></option>';
            }
        }

        async function submitAddChild(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/specialist/api/create-child', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    alert('<%= __("childCreatedSuccess") %>');
                    location.reload();
                } else {
                    alert(result.message || '<%= __("errorCreatingChild") %>');
                }
            } catch (error) {
                console.error('Error creating child:', error);
                alert('<%= __("errorCreatingChild") %>');
            }
        }

        // Close modal when clicking outside
        window.onclick = function (event) {
            const modal = document.getElementById('addChildModal');
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

