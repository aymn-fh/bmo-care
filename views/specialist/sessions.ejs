<%- include('../partials/layout-start', { title: __('sessionsLog'), activePage: 'sessions' }) %>

    <div class="dashboard">
        <div class="page-header">
            <h1><i class="fas fa-clipboard-list"></i>
                <%= __('sessionsLog') %>
            </h1>
            <p class="subtitle">
                <%= __('viewAllProgressReports') %>
            </p>
        </div>

        <!-- Filters -->
        <div class="data-section" style="margin-bottom: 2rem;">
            <form method="GET" action="/specialist/sessions" class="filter-form">
                <div class="form-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
                    <div class="form-group">
                        <label for="child">
                            <%= __('child') %>
                        </label>
                        <select name="child" id="child" class="form-control">
                            <option value="">
                                <%= __('all') %>
                            </option>
                            <% children.forEach(child=> { %>
                                <option value="<%= child._id %>" <%=selectedChild===child._id.toString() ? 'selected'
                                    : '' %>>
                                    <%= child.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="childId">
                            <%= __('childId') || 'Child ID (Manual)' %>
                        </label>
                        <input type="text" name="childId" id="childId" class="form-control"
                            placeholder="<%= __('enterChildId') || '...' %>"
                            value="<%= typeof childIdInput !== 'undefined' ? childIdInput : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="dateFrom">
                            <%= __('from') %>
                        </label>
                        <input type="date" name="dateFrom" id="dateFrom" class="form-control"
                            value="<%= dateFrom || '' %>">
                    </div>

                    <div class="form-group">
                        <label for="dateTo">
                            <%= __('to') %>
                        </label>
                        <input type="date" name="dateTo" id="dateTo" class="form-control" value="<%= dateTo || '' %>">
                    </div>

                    <div class="form-group" style="display: flex; align-items: flex-end;">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">
                            <i class="fas fa-filter"></i>
                            <%= __('filter') %>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Progress Reports List -->
        <div class="data-section">
            <div class="section-header">
                <h2><i class="fas fa-file-alt"></i>
                    <%= __('progressReports') %>
                </h2>
                <span class="badge badge-primary">
                    <%= sessions.length %>
                        <%= __('session') %>
                </span>
            </div>

            <% if (sessions.length> 0) { %>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>
                                    <%= __('date') %>
                                </th>
                                <th>
                                    <%= __('child') %>
                                </th>
                                <th>
                                    <%= __('sessionType') %>
                                </th>
                                <th>
                                    <%= __('rating') %>
                                </th>
                                <th>
                                    <%= __('actions') %>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% sessions.forEach(session=> { %>
                                <tr>
                                    <td>
                                        <i class="fas fa-calendar"></i>
                                        <%= new Date(session.date).toLocaleDateString(currentLang==='ar' ? 'ar-SA'
                                            : 'en-US' ) %>
                                    </td>
                                    <td>
                                        <div class="cell-with-icon">
                                            <% if (session.child.avatar) { %>
                                                                <img src="<%= uploadUrl(session.child.avatar) %>"
                                                    alt="<%= session.child.name %>" class="avatar-small">
                                                <% } else { %>
                                                    <div class="avatar-circle">
                                                        <i class="fas fa-child"></i>
                                                    </div>
                                                    <% } %>
                                                        <span>
                                                            <%= session.child.name %>
                                                        </span>
                                        </div>
                                    </td>
                                    <td>
                                        <%= session.sessionType || '-' %>
                                    </td>
                                    <td>
                                        <% if (session.rating) { %>
                                            <div class="rating">
                                                <% for (let i=1; i <=5; i++) { %>
                                                    <i
                                                        class="fas fa-star <%= i <= session.rating ? 'filled' : '' %>"></i>
                                                    <% } %>
                                            </div>
                                            <% } else { %>
                                                -
                                                <% } %>
                                    </td>
                                    <td>
                                        <a href="/specialist/child/<%= session.child._id %>" class="btn btn-sm btn-info"
                                            title="<%= __('view') %>">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-clipboard-list"></i>
                        <p>
                            <%= __('noSessions') %>
                        </p>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        .rating {
            display: flex;
            gap: 0.2rem;
        }

        .rating .fa-star {
            color: #ddd;
            font-size: 0.9rem;
        }

        .rating .fa-star.filled {
            color: #fbbf24;
        }

        .filter-form .form-grid {
            gap: 1rem;
        }

        .avatar-small {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>

    <%- include('../partials/layout-end') %>