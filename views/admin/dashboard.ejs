<%- include('../partials/layout-start', { title: __('dashboard'), activePage: 'dashboard' }) %>

    <div class="page-container-clean">
        <!-- Center Info -->
        <% if (center) { %>
            <div class="header-section-clean" style="margin-bottom: 2rem;">
                <div class="center-info-modern glass" style="padding: 1.5rem; display: flex; align-items: center; gap: 1.5rem; border-radius: 20px;">
                    <div class="center-icon-large" style="width: 60px; height: 60px; background: #eff6ff; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: #3b82f6; font-size: 1.8rem;">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="center-text">
                        <h2 style="margin: 0; color: var(--text-primary); font-size: 1.5rem;">
                            <%= center.name %>
                        </h2>
                        <% if (center.address) { %>
                            <p style="margin: 0.25rem 0 0; color: var(--text-secondary);">
                                <i class="fas fa-map-marker-alt" style="margin-right: 0.5rem;"></i>
                                <%= center.address %>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= __('noCenterAssigned') %>
                </div>
            <% } %>

                    <!-- Stats Cards -->
                    <div class="stats-grid-clean" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; margin-bottom: 2.5rem;">
                        <!-- Specialists -->
                        <div class="stat-card-clean" style="padding: 1.5rem; border-radius: 16px; display: flex; align-items: center; justify-content: space-between;">
                            <div class="stat-content-clean">
                                <h3 style="font-size: 2.5rem; font-weight: 700; color: #3b82f6; margin-bottom: 0;">
                                    <%= stats.specialists || 0 %>
                                </h3>
                                <p style="color: #64748b; font-size: 0.95rem; font-weight: 500;">
                                    <%= __('specialists') %>
                                </p>
                            </div>
                             <div class="stat-icon-clean" style="width: 50px; height: 50px; background: #eff6ff; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #3b82f6;">
                                <i class="fas fa-user-md" style="font-size: 1.4rem;"></i>
                            </div>
                        </div>

                        <!-- Parents -->
                        <div class="stat-card-clean" style="padding: 1.5rem; border-radius: 16px; display: flex; align-items: center; justify-content: space-between;">
                            <div class="stat-content-clean">
                                <h3 style="font-size: 2.5rem; font-weight: 700; color: #10b981; margin-bottom: 0;">
                                    <%= stats.parents || 0 %>
                                </h3>
                                <p style="color: #64748b; font-size: 0.95rem; font-weight: 500;">
                                    <%= __('parents') %>
                                </p>
                            </div>
                             <div class="stat-icon-clean" style="width: 50px; height: 50px; background: #ecfdf5; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #10b981;">
                                <i class="fas fa-users" style="font-size: 1.4rem;"></i>
                            </div>
                        </div>

                        <!-- Children -->
                        <div class="stat-card-clean" style="padding: 1.5rem; border-radius: 16px; display: flex; align-items: center; justify-content: space-between;">
                            <div class="stat-content-clean">
                                <h3 style="font-size: 2.5rem; font-weight: 700; color: #f59e0b; margin-bottom: 0;">
                                    <%= stats.children || 0 %>
                                </h3>
                                <p style="color: #64748b; font-size: 0.95rem; font-weight: 500;">
                                    <%= __('children') %>
                                </p>
                            </div>
                             <div class="stat-icon-clean" style="width: 50px; height: 50px; background: #fffbeb; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #f59e0b;">
                                <i class="fas fa-child" style="font-size: 1.4rem;"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="quick-actions" style="margin-bottom: 2.5rem;">
                        <h2 style="font-size: 1.25rem; margin-bottom: 1rem; color: var(--text-primary);">
                            <i class="fas fa-bolt" style="color: #f59e0b; margin-left: 0.5rem;"></i>
                            <%= __('quickActions') %>
                        </h2>
                        <div class="actions-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                            <a href="/admin/specialists/create" class="action-card-clean glass" style="padding: 1.5rem; border-radius: 16px; display: flex; flex-direction: column; align-items: center; text-decoration: none; transition: transform 0.2s;">
                                <div style="width: 48px; height: 48px; background: #eff6ff; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: #3b82f6; margin-bottom: 1rem;">
                                    <i class="fas fa-user-plus" style="font-size: 1.2rem;"></i>
                                </div>
                                <span style="font-weight: 600; color: var(--text-primary);">
                                    <%= __('createSpecialist') %>
                                </span>
                            </a>
                            <a href="/admin/specialists" class="action-card-clean glass" style="padding: 1.5rem; border-radius: 16px; display: flex; flex-direction: column; align-items: center; text-decoration: none; transition: transform 0.2s;">
                                <div style="width: 48px; height: 48px; background: #f0f9ff; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: #0ea5e9; margin-bottom: 1rem;">
                                    <i class="fas fa-user-md" style="font-size: 1.2rem;"></i>
                                </div>
                                <span style="font-weight: 600; color: var(--text-primary);">
                                    <%= __('specialists') %>
                                </span>
                            </a>
                        </div>
                    </div>

                    <!-- Recent Specialists -->
                    <div class="data-section-clean table-container-clean glass" style="padding: 1.5rem; border-radius: 16px;">
                        <div class="section-header-clean" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                            <h3 style="margin: 0; font-size: 1.1rem; font-weight: 700; color: var(--text-primary);">
                                <i class="fas fa-user-md" style="color: #3b82f6; margin-left: 0.5rem;"></i>
                                <%= __('adminRecentSpecialists') %>
                            </h3>
                            <a href="/admin/specialists" class="btn btn-link" style="color: #3b82f6; text-decoration: none; font-weight: 500;">
                                <%= __('viewAll') %>
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="clean-table" style="width: 100%; border-collapse: separate; border-spacing: 0 0.5rem;">
                                <thead>
                                    <tr>
                                        <th style="text-align: right; padding: 1rem; color: var(--text-secondary); font-weight: 600;"><%= __('name') %></th>
                                        <th style="text-align: right; padding: 1rem; color: var(--text-secondary); font-weight: 600;"><%= __('specialization') %></th>
                                        <th style="text-align: right; padding: 1rem; color: var(--text-secondary); font-weight: 600;"><%= __('email') %></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (recentSpecialists && recentSpecialists.length> 0) { %>
                                        <% recentSpecialists.forEach(function(specialist) { %>
                                            <tr style="background: var(--bg-body); border-radius: 8px;">
                                                <td style="padding: 1rem; border-radius: 0 8px 8px 0;">
                                                    <div class="cell-with-icon" style="display: flex; align-items: center; gap: 1rem;">
                                                        <div class="avatar-circle-small" style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden; background: #f1f5f9;">
                                                            <% if (specialist.profilePhoto) { %>
                                                                <img src="<%= uploadUrl(specialist.profilePhoto) %>" alt="<%= specialist.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                                            <% } else { %>
                                                                <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #94a3b8;">
                                                                    <i class="fas fa-user-md"></i>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <span style="font-weight: 600; color: var(--text-primary);">
                                                            <%= specialist.name %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td style="padding: 1rem; color: var(--text-secondary);">
                                                    <%= specialist.specialization || '-' %>
                                                </td>
                                                <td style="padding: 1rem; border-radius: 8px 0 0 8px; color: var(--text-secondary);">
                                                    <%= specialist.email %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3" class="text-center text-muted" style="padding: 2rem; text-align: center;">
                                                            <%= __('noData') %>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
    </div>

    <%- include('../partials/layout-end') %>